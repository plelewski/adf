{
	"name": "Products1",
	"properties": {
		"description": "all in both files",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AllProducts",
						"type": "DatasetReference"
					},
					"name": "all"
				},
				{
					"dataset": {
						"referenceName": "ProductsPlace",
						"type": "DatasetReference"
					},
					"name": "place"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "allColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PRODUCT_ID as integer,",
				"          NAME as string,",
				"          PRICE as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> all",
				"source(output(",
				"          PRODUCT_ID as integer,",
				"          SHOP as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> place",
				"all, place join(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> allColumns"
			]
		}
	}
}